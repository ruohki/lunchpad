{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "lunchpad",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.lunchpad.dev",
      "icon": [
        "icons/icon@512.png",
        "icons/logo.ico",
        "icons/logo.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fileDropEnabled": true,
        "center": true,
        "fullscreen": false,
        "resizable": true,
        "title": "Lunchpad",
        "minWidth": 756,
        "minHeight": 756,
        "width": 756,
        "height": 756
      }
    ],
    "systemTray": {
      "iconPath": "icons/logo.ico",
      "iconAsTemplate": true
    }
  }
}
